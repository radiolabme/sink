{
  "$schema": "../src/sink.schema.json",
  "description": "Install Lima (Linux virtual machines on macOS)",
  "version": "1.0.0",
  "platforms": [
    {
      "os": "darwin",
      "match": "darwin*",
      "name": "macOS",
      "install_steps": [
        {
          "name": "Ensure Homebrew is installed",
          "check": "command -v brew",
          "error": "Error: Homebrew is required but not installed. Please run platform-dependencies.json first or install manually from https://brew.sh"
        },
        {
          "name": "Install Lima",
          "check": "command -v limactl",
          "on_missing": [
            {
              "name": "Install Lima via Homebrew",
              "command": "brew install lima",
              "error": "Failed to install Lima. Check Homebrew and network connection."
            }
          ]
        },
        {
          "name": "Verify Lima installation",
          "command": "limactl --version"
        }
      ]
    },
    {
      "os": "linux",
      "match": "linux*",
      "name": "Linux",
      "distributions": [
        {
          "ids": ["ubuntu", "debian"],
          "name": "Ubuntu/Debian",
          "install_steps": [
            {
              "name": "Install Lima",
              "check": "command -v limactl",
              "on_missing": [
                {
                  "name": "Download Lima binary",
                  "command": "curl -fsSL https://github.com/lima-vm/lima/releases/latest/download/lima-$(uname -m).tar.gz | sudo tar Cxzf /usr/local",
                  "error": "Failed to download Lima. Check network connection and GitHub availability."
                }
              ]
            },
            {
              "name": "Verify Lima installation",
              "command": "limactl --version"
            }
          ]
        },
        {
          "ids": ["fedora", "rhel", "centos", "rocky", "almalinux"],
          "name": "Red Hat Family",
          "install_steps": [
            {
              "name": "Install Lima",
              "check": "command -v limactl",
              "on_missing": [
                {
                  "name": "Download Lima binary",
                  "command": "curl -fsSL https://github.com/lima-vm/lima/releases/latest/download/lima-$(uname -m).tar.gz | sudo tar Cxzf /usr/local",
                  "error": "Failed to download Lima. Check network connection and GitHub availability."
                }
              ]
            },
            {
              "name": "Verify Lima installation",
              "command": "limactl --version"
            }
          ]
        }
      ],
      "fallback": {
        "error": "Unsupported Linux distribution. Please install Lima manually from https://github.com/lima-vm/lima"
      }
    }
  ],
  "fallback": {
    "error": "Unsupported operating system. Lima requires macOS or Linux."
  }
}
