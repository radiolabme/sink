      "use_cases": ["Large-scale apps", "Analytics", "Machine learning", "Big data"],
      "comparable_to": ["DigitalOcean General Purpose 32GB", "Linode 32GB", "Azure D16s v5"]
    },
    {
      "name": "2xlarge",
      "description": "High-performance production workloads",
      "cpus": 32,
      "memory": 64,
      "disk": 1280,
