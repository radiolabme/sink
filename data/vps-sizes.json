{
  "$schema": "./vps-sizes.schema.json",
  "description": "Common VPS instance sizes based on industry standards (DigitalOcean, Linode, AWS)",
  "sizes": [
    {
      "name": "nano",
      "description": "Minimal resources for testing and very light workloads",
      "cpus": 1,
      "memory": 1,
      "disk": 25,
      "use_cases": ["Testing", "Learning", "Single-page apps", "Development"],
      "comparable_to": ["DigitalOcean Basic 1GB", "Linode Nanode 1GB", "Azure B1s"]
    },
    {
      "name": "micro",
      "description": "Small production workloads and development environments",
      "cpus": 1,
      "memory": 2,
      "disk": 50,
      "use_cases": ["Small websites", "Blogs", "Simple APIs", "CI runners"],
      "comparable_to": ["DigitalOcean Basic 2GB", "Linode 2GB", "Azure B1ms"]
    },
    {
      "name": "small",
      "description": "Light production workloads with moderate traffic",
      "cpus": 2,
